html
  head
    link(href='https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css', rel='stylesheet')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    script.
      var check = function() {
        if (document.getElementById('password').value ==
          document.getElementById('confirm_password').value) {
          document.getElementById('message').style.color = 'green';
          document.getElementById('message').innerHTML = 'matching';
        } else {
          document.getElementById('message').style.color = 'red';
          document.getElementById('message').innerHTML = 'not matching';
        }
      }
  body.bg-grey
    .container.mx-auto.pt-4 
      form.w-full.max-w-md.bg-white.shadow-md.rounded.px-8.pt-6.pb-8.mb-4.mx-auto.mt-8(method='POST')
        |
        - if(error){
        .bg-red-lightest.border.border-red-light.text-red-dark.px-4.py-3.rounded.relative(role='alert') #{error}
        - }
        |
        - if(info){
        .bg-green-lightest.border.border-green-light.text-green-dark.px-4.py-3.rounded.relative(role='alert') #{info}
        - }   
        .text-center
          label.block.font-bold.text-grey-darker.text-xl.mb-6.mt-4
            | COMPLETE REGISTRATION
        .flex.items-center.mb-6
          .col-4
            label.block.text-grey-darker.text-left.mb-1.mb-0.pr-4
              | Username
          .col
            input#username.bg-purple-lightest.border-grey-lighter.rounded.w-full.py-2.px-4.text-grey-darker(class='hover:border-purple' name = "username" value = susername readonly)
        .flex.items-center.mb-6
          .col-4
            label.block.text-grey-darker.text-left.mb-1.mb-0.pr-4
              | Email
          .col
            input#email.bg-purple-lightest.border-grey-lighter.rounded.w-full.py-2.px-4.text-grey-darker(class='hover:border-purple' name = "email" value = semail readonly)
        .flex.items-center.mb-6
          .col-4
            label.block.text-grey-darker.text-left.mb-1.mb-0.pr-4
              | Password
          .col
            input#password.bg-purple-lightest.border-grey-lighter.rounded.w-full.py-2.px-4.text-grey-darker(class='hover:border-purple' name = "password" type = "password" onkeyup='check();')
        .flex.items-center.mb-6
          .col-4
            label.block.text-grey-darker.text-left.mb-1.mb-0.pr-4
              | Confirm Password
          .col
            input#confirm_password.bg-purple-lightest.border-grey-lighter.rounded.w-full.py-2.px-4.text-grey-darker(class='hover:border-purple' name = "cpassword" type = "password" onkeyup='check();')
            span#message        
        .flex.items-center.mb-6
          .col-4
          .col
            button.shadow.bg-purple.text-white.font-bold.py-2.px-4.rounded(class='hover:bg-purple-light', type='submit' , value='submit') Register
            a.text-blue.text-left.mb-1.mb-0.pr-4.ml-6(href='/login')
              | Back to login
